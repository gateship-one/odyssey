<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/material_list_item_height"
    android:orientation="vertical"
    android:paddingStart="@dimen/material_standard_horizontal_spacing"
    android:paddingEnd="@dimen/material_standard_horizontal_spacing">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="?attr/app_color_on_content"
        android:textAppearance="?attr/app_text_list_title"
        tools:text="title" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/item_additional_subtitle"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/app_color_on_content"
            android:textAppearance="?attr/app_text_list_subtitle"
            tools:text="subtitle" />

        <TextView
            android:id="@+id/item_additional_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:textColor="?attr/app_color_on_content"
            android:textAppearance="?attr/app_text_list_subtitle"
            tools:text="additional subtitle" />
    </RelativeLayout>

</LinearLayout>