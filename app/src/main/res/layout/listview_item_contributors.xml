<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/material_standard_horizontal_spacing"
    android:minHeight="@dimen/material_list_item_height">

    <TextView
        android:id="@+id/item_contributors_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="?attr/odyssey_color_text_background_primary"
        android:fontFamily="sans-serif-regular"
        android:textSize="@dimen/material_font_style_size_subheading"
        tools:text="Hendrik Borghorst"/>

    <TextView
        android:id="@+id/item_contributors_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="?attr/odyssey_color_text_background_secondary"
        android:fontFamily="sans-serif-regular"
        android:textSize="@dimen/material_font_style_size_body_1"
        tools:text="@string/contributor_team"/>
</LinearLayout>