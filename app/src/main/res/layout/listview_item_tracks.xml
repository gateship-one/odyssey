<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/material_standard_horizontal_spacing"
    android:minHeight="@dimen/material_list_item_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_tracks_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="sans-serif-regular"
            android:textSize="@dimen/material_font_style_size_subheading"
            />

        <TextView
            android:id="@+id/item_tracks_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/separator"
            android:fontFamily="sans-serif-regular"
            android:textSize="@dimen/material_font_style_size_subheading"
            />

        <TextView
            android:id="@+id/item_tracks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="sans-serif-regular"
            android:textSize="@dimen/material_font_style_size_subheading"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tracks_additional_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/item_tracks_duration"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="sans-serif-regular"
            android:textSize="@dimen/material_font_style_size_body_1" />

        <TextView
            android:id="@+id/item_tracks_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1" />
    </RelativeLayout>

</LinearLayout>